    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Current date for date inputs
            const today = new Date();
            const formattedDate = today.toISOString().split('T')[0];
            document.getElementById('invoiceDate').value = formattedDate;

            // Set due date to 7 days from today
            const dueDate = new Date();
            dueDate.setDate(today.getDate() + 7);
            document.getElementById('dueDate').value = dueDate.toISOString().split('T')[0];

            // Invoice number with random digits
            document.getElementById('invoiceNumber').value = `INV-${Math.floor(1000 + Math.random() * 9000)}`;

            // Add item button
            document.getElementById('addItemBtn').addEventListener('click', addInvoiceItem);

            // Initial item
            addInvoiceItem();

            // Generate preview button
            document.getElementById('generatePreviewBtn').addEventListener('click', generatePreview);

            // Clear form button
            document.getElementById('clearFormBtn').addEventListener('click', clearForm);

            // Print button
            document.getElementById('printBtn').addEventListener('click', function () {
                window.print();
            });

            // Functions
            function addInvoiceItem() {
                const itemsContainer = document.getElementById('invoiceItems');
                const itemIndex = itemsContainer.children.length;

                const itemRow = document.createElement('tr');
                itemRow.className = 'item-row hover:bg-gray-50';
                itemRow.id = `item-${itemIndex}`;
                itemRow.innerHTML = `
          <td class="px-3 py-4 whitespace-nowrap">
            <input type="text" class="item-desc w-full px-2 py-1 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-blue-500" placeholder="Description">
          </td>
          <td class="px-3 py-4 whitespace-nowrap">
            <input type="number" min="1" value="1" class="item-qty w-full px-2 py-1 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-blue-500">
          </td>
          <td class="px-3 py-4 whitespace-nowrap">
            <input type="number" min="0" step="0.01" value="0.00" class="item-rate w-full px-2 py-1 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-blue-500">
          </td>
          <td class="px-3 py-4 whitespace-nowrap text-right">
            <span class="item-amount">$0.00</span>
          </td>
          <td class="px-3 py-4 whitespace-nowrap">
            <button class="remove-item px-2 py-1 text-red-500 opacity-0 hover:text-red-700 transition-opacity" onclick="removeItem(${itemIndex})">
              Ã—
            </button>
          </td>
        `;

                itemsContainer.appendChild(itemRow);

                // Add event listeners to qty and rate inputs
                const qtyInput = itemRow.querySelector('.item-qty');
                const rateInput = itemRow.querySelector('.item-rate');

                const calculateItemAmount = () => {
                    const qty = parseFloat(qtyInput.value) || 0;
                    const rate = parseFloat(rateInput.value) || 0;
                    const amount = qty * rate;
                    itemRow.querySelector('.item-amount').textContent = `$${amount.toFixed(2)}`;
                };

                qtyInput.addEventListener('input', calculateItemAmount);
                rateInput.addEventListener('input', calculateItemAmount);
            }

            function removeItem(index) {
                const itemRow = document.getElementById(`item-${index}`);
                if (itemRow) {
                    itemRow.remove();
                }
            }

            window.removeItem = removeItem;

            function generatePreview() {
                // Company info
                document.getElementById('previewCompanyName').textContent = document.getElementById('companyName').value;
                const companyAddressLines = document.getElementById('companyAddress').value.split('\n');
                document.getElementById('previewCompanyAddress').innerHTML = companyAddressLines.join('<br>');
                document.getElementById('previewCompanyEmail').textContent = document.getElementById('companyEmail').value;
                document.getElementById('previewCompanyPhone').textContent = document.getElementById('companyPhone').value;

                // Client info
                document.getElementById('previewClientName').textContent = document.getElementById('clientName').value || 'Client Name';
                document.getElementById('previewClientEmail').textContent = document.getElementById('clientEmail').value || 'client@email.com';
                document.getElementById('previewClientAddress').textContent = document.getElementById('clientAddress').value || '123 Client St, City';
                document.getElementById('previewClientPhone').textContent = document.getElementById('clientPhone').value || '(555) 123-4567';

                // Invoice details
                document.getElementById('previewInvoiceNumber').textContent = document.getElementById('invoiceNumber').value || '#INV-0001';

                const invoiceDate = document.getElementById('invoiceDate').value;
                document.getElementById('previewInvoiceDate').textContent = invoiceDate ? formatDate(invoiceDate) : 'Jul 12, 2023';

                const dueDate = document.getElementById('dueDate').value;
                document.getElementById('previewDueDate').textContent = dueDate ? formatDate(dueDate) : 'Jul 19, 2023';

                // Invoice items
                const previewItemsContainer = document.getElementById('previewItems');
                previewItemsContainer.innerHTML = '';

                const itemRows = document.querySelectorAll('#invoiceItems tr');
                let subtotal = 0;

                if (itemRows.length === 0) {
                    previewItemsContainer.innerHTML = `
            <tr>
              <td colspan="4" class="py-4 text-center text-sm text-gray-500">No items added yet</td>
            </tr>
          `;
                } else {
                    itemRows.forEach(row => {
                        const desc = row.querySelector('.item-desc').value || 'Item Description';
                        const qty = parseFloat(row.querySelector('.item-qty').value) || 0;
                        const rate = parseFloat(row.querySelector('.item-rate').value) || 0;
                        const amount = qty * rate;
                        subtotal += amount;

                        const itemRow = document.createElement('tr');
                        itemRow.className = 'border-b border-gray-100';
                        itemRow.innerHTML = `
              <td class="py-3 text-sm">${desc}</td>
              <td class="py-3 text-sm text-right">${qty}</td>
              <td class="py-3 text-sm text-right">$${rate.toFixed(2)}</td>
              <td class="py-3 text-sm text-right">$${amount.toFixed(2)}</td>
            `;
                        previewItemsContainer.appendChild(itemRow);
                    });
                }

                // Calculate totals
                const tax = subtotal * 0.10; // 10% tax for example
                const total = subtotal + tax;

                document.getElementById('previewSubtotal').textContent = `$${subtotal.toFixed(2)}`;
                document.getElementById('previewTax').textContent = `$${tax.toFixed(2)}`;
                document.getElementById('previewTotal').textContent = `$${total.toFixed(2)}`;

                // Notes & Terms
                document.getElementById('previewNotes').textContent = document.getElementById('notes').value || 'Thank you for your business!';
                document.getElementById('previewTerms').textContent = document.getElementById('terms').value || 'Payment due within 7 days. Late fees may apply.';
            }

            function formatDate(dateString) {
                const options = { year: 'numeric', month: 'short', day: 'numeric' };
                return new Date(dateString).toLocaleDateString('en-US', options);
            }

            function clearForm() {
                if (confirm('Are you sure you want to clear the entire form?')) {
                    // Reset all form inputs
                    document.getElementById('companyName').value = 'Your Company Name';
                    document.getElementById('companyAddress').value = '123 Business Street\nCity, State ZIP';
                    document.getElementById('companyEmail').value = 'info@yourcompany.com';
                    document.getElementById('companyPhone').value = '(123) 456-7890';
                    document.getElementById('clientName').value = '';
                    document.getElementById('clientEmail').value = '';
                    document.getElementById('clientAddress').value = '';
                    document.getElementById('clientPhone').value = '';

                    document.getElementById('invoiceNumber').value = `INV-${Math.floor(1000 + Math.random() * 9000)}`;
                    document.getElementById('invoiceDate').value = new Date().toISOString().split('T')[0];

                    const dueDate = new Date();
                    dueDate.setDate(dueDate.getDate() + 7);
                    document.getElementById('dueDate').value = dueDate.toISOString().split('T')[0];

                    document.getElementById('notes').value = '';
                    document.getElementById('terms').value = '';

                    // Clear items
                    document.getElementById('invoiceItems').innerHTML = '';
                    addInvoiceItem();

                    // Clear preview
                    document.getElementById('previewItems').innerHTML = `
            <tr>
              <td colspan="4" class="py-4 text-center text-sm text-gray-500">No items added yet</td>
            </tr>
          `;
                    document.getElementById('previewSubtotal').textContent = '$0.00';
                    document.getElementById('previewTax').textContent = '$0.00';
                    document.getElementById('previewTotal').textContent = '$0.00';
                }
            }

            // PDF download functionality would typically require a server-side component
            document.getElementById('downloadPdfBtn').addEventListener('click', function () {
                alert('PDF generation would require server-side processing. This is just a preview in the browser.');
            });

            // Template save functionality
            document.getElementById('saveTemplateBtn').addEventListener('click', function () {
                const templateName = prompt('Enter a name for this template:');
                if (templateName) {
                    alert(`Template "${templateName}" saved (this would be connected to a database in a real app).`);
                }
            });
        });
    </script>
</body>

</html>